{
  "name": "@lotrocompletionist/website",
  "private": true,
  "version": "0.0.1",
  "description": "LoTRO completionist website",
  "files": [
    "dist/"
  ],
  "scripts": {
    "dev": "webpack-dev-server --mode development --open --history-api-fallback",
    "build": "webpack --mode production",
    "deploy": "firebase deploy",
    "test": "jest",
    "test:update": "jest -u",
    "format": "prettier --write '**/*.{js,jsx,ts,tsx,json,md,css,scss}'",
    "format:verify": "prettier --list-different '**/*.{js,jsx,ts,tsx,json,md,css,scss}'"
  },
  "dependencies": {
    "bloomer": "^0.6.3",
    "bulma": "^0.6.2",
    "bulmaswatch": "^0.6.2",
    "font-awesome": "^4.7.0",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-loadable": "^5.3.1",
    "react-router-dom": "^4.2.2"
  },
  "devDependencies": {
    "@types/jest": "^22.2.0",
    "@types/react": "^16.0.40",
    "@types/react-dom": "^16.0.4",
    "@types/react-loadable": "^5.3.3",
    "@types/react-router-dom": "^4.2.4",
    "@types/react-test-renderer": "^16.0.1",
    "css-loader": "^0.28.10",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^3.0.6",
    "jest": "^22.4.2",
    "node-sass": "^4.8.1",
    "react-test-renderer": "^16.2.0",
    "sass-loader": "^6.0.7",
    "style-loader": "^0.20.3",
    "ts-loader": "^4.0.1",
    "typescript": "^2.7.2",
    "webapp-webpack-plugin": "^1.1.2",
    "webpack": "^4.1.1",
    "webpack-cli": "^2.0.11",
    "webpack-dev-server": "^3.1.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lotrocompletionist/website.git"
  },
  "author": "Erik Schierboom <erik_schierboom@hotmail.com> (http://www.erikschierboom.com)",
  "license": "MIT",
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "<rootDir>/preprocessor.js"
    },
    "testMatch": [
      "**/*.test.+(ts|tsx|js)"
    ]
  }
}
