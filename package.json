{
  "name": "@lotrocompletionist/website",
  "private": true,
  "version": "0.0.1",
  "description": "LoTRO completionist website",
  "files": [
    "dist/"
  ],
  "scripts": {
    "dev": "webpack-dev-server --mode development --open --history-api-fallback",
    "build": "webpack --mode production",
    "deploy": "firebase deploy",
    "test": "jest",
    "test:update": "jest -u",
    "format": "prettier --write '**/*.{js,jsx,ts,tsx,json,md,css,scss}'",
    "format:verify": "prettier --list-different '**/*.{js,jsx,ts,tsx,json,md,css,scss}'"
  },
  "dependencies": {
    "bloomer": "^0.6.3",
    "bulma": "^0.6.2",
    "bulmaswatch": "^0.6.2",
    "font-awesome": "^4.7.0",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-loadable": "^5.3.1",
    "react-router-dom": "^4.2.2"
  },
  "devDependencies": {
    "@types/jest": "^22.2.0",
    "@types/react": "^16.0.40",
    "@types/react-dom": "^16.0.4",
    "@types/react-loadable": "^5.3.3",
    "@types/react-router-dom": "^4.2.5",
    "@types/react-test-renderer": "^16.0.1",
    "css-loader": "^0.28.11",
    "file-loader": "^1.1.11",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^3.0.7",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^22.4.3",
    "node-sass": "^4.8.1",
    "react-test-renderer": "^16.2.0",
    "sass-loader": "^6.0.7",
    "style-loader": "^0.20.3",
    "ts-jest": "^22.4.2",
    "ts-loader": "^4.1.0",
    "typescript": "^2.7.2",
    "url-loader": "^1.0.1",
    "webapp-webpack-plugin": "^1.3.0",
    "webpack": "^4.2.0",
    "webpack-cli": "^2.0.12",
    "webpack-dev-server": "^3.1.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lotrocompletionist/website.git"
  },
  "author": "Erik Schierboom <erik_schierboom@hotmail.com> (http://www.erikschierboom.com)",
  "license": "MIT",
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "moduleNameMapper": {
      "\\.(css|scss)$": "identity-obj-proxy"
    },
    "transform": {
      "^.+\\.tsx?$": "ts-jest",
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/.jest/file-transformer.js"
    },
    "testMatch": [
      "**/*.test.+(ts|tsx|js)"
    ]
  }
}
